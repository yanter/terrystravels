---
/**
 * * This component is used to display a hero section with a background image
 * Desktop image should be 4:1 aspect ratio and ideally 2160px tall
 * Mobile image should be ideally 1536px tall
 * You can center the content by setting the variable `centerContent` to `true`
 */
const centerContent = true;

import Button from "@components/Button/Button.astro";
import NewsletterForm from "@components/Forms/NewsletterForm.astro";
import { getLocaleFromUrl } from "@js/localeUtils";
import { getTranslatedData, useTranslations } from "@js/translationUtils";
import { Image } from "astro:assets";

const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);
const t = useTranslations(currLocale);

interface HeroProps {
	desktopImage: ImageMetadata; // this should be 4:1 aspect ratio and at least 2160px tall
	mobileImage?: ImageMetadata; // ideally this should be at least 1536px tall
}

import desktopImage from "@assets/images/hero-bg-min.png";
import mobileImage from "@assets/images/hero-bg-mobile.png";

const heroData: HeroProps = {
	desktopImage: desktopImage,
	mobileImage: mobileImage,
};
---

<section id="hero" class="pt-[5.5rem] pb-14 md:pb-24" data-aos="fade-in">
	<div class="relative h-[32rem] w-full lg:h-[45rem]">
		<div class="absolute -z-20 h-full w-full overflow-hidden">
			<Image
				src={heroData.desktopImage}
				class=`h-auto min-h-full w-full object-cover ${heroData.mobileImage ? "hidden sm:block" : ""}`
				alt="smiling family"
				aria-hidden="true"
				loading="eager"
				densities={[1, 2, 3]}
				height={720}
			/>
			{
				heroData.mobileImage && (
					<Image
						src={heroData.mobileImage}
						class="h-auto min-h-full w-full object-cover sm:hidden"
						alt="smiling family"
						aria-hidden="true"
						loading="eager"
						densities={[1, 2, 3]}
						height={512}
					/>
				)
			}
		</div>
		<div
			class:list={[
				"site-container flex h-full items-center",
				centerContent && "justify-center text-center",
			]}
		>
			<!-- Hero text -->
			<div class="bg-base-50/70 max-w-xl rounded-xs p-6">
				<h1
					class="font-display-block font-handwriting text-5xl text-nowrap md:text-6xl lg:text-7xl"
				>
					{siteData.name}
				</h1>
				<p class="description mx-auto mt-6 max-w-none text-sm text-pretty md:text-base">
					<!-- A beautiful affiliate and blog template with tons of pages and
          features. Created with Astro, Tailwind CSS, and Keystatic CMS. Check
          the "overview" page for more details. -->
					{t("hero_description")}
				</p>
				<NewsletterForm name="hero-newsletter" />
			</div>
		</div>
	</div>
</section>
